<%- content_for :page_heading do %>
  <h2>
    <i class="glyphicon glyphicon-large glyphicon-cog"></i>
    <%= t(".post_types") %>
  </h2>
<% end %>

<div class='row'>
  <div class='col-md-4'>
    <%= form_tag :action=>"edit", :id => @post_type.id do %>    
    <%= error_messages_for 'post_type' %>
    <div class='form-group'>
      <%= text_field :post_type, :name, class: 'form-control', placeholder: t(".name")  %>
    </div>
    <div class='form-group'>
      <%= text_area :post_type, :description, rows: 5, class: 'form-control', placeholder: t(".description") %>
    </div>
    <div class='form-group'>
      <hr />
      <%= link_to(t(".cancel"), {action: 'index'}, class: 'btn') %>
      <%= t(".or") %>
      <%= submit_tag(t(".save"), class: 'btn btn-success') %>
    </div>
    <% end %>
  </div>

  <div class="col-md-8">
    <table class='table table-hover'>
      <thead>
        <tr class='noborder'>
          <th><%= t(".name") %></th>
          <th><%= t(".description") %></th>
          <th><%= t(".template_name") %></th>
        </tr>
      </thead>
      <tr class='shade'>
        <td><%= t(".default") %></td>
        <td><%= t(".publify_default_post_type") %></td>
        <td>read</td>
      </tr>
      <% for pt in @post_types -%>
        <tr>
          <td>
            <%= pt.name %><br />
            <div class='action'>
              <%= [button_to_edit(pt), button_to_delete(pt)].join(" ").html_safe %>
            </div>
          </td>
          <td><%= h pt.description %></td>
          <td><%= pt.permalink %></td>
        </tr>
      <% end -%>
    </table>
    <p class="help-block"><%= t(".explain") %></p>
  </div>
</div>
